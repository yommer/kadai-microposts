<% unless current_user == micropost.user %>
  <% if micropost.(current_user) %>
    <%= form_for(micropost.favourites.find_by(user_id: current_user.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :like_id, user.id %>
      <%= f.submit '', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(micropost.favourites.build) do |f| %>
       <div><%= hidden_field_tag :micropost_id, micropost.id %></div>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= f.submit '', class: 'btn btn-primary btn-block' %>
  <% end %>
  <% end %>
<% end 